
@{
    ViewData["Title"] = "Delete";
}

@model Course

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Course
            </h2>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" disabled type="text" class="form-control" />
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px;"><i class="bi bi-trash"></i>Delete</button>
            <a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}


 