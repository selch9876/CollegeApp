@model IEnumerable<CollegeApp.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student ID
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects)
            </th>
           
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @foreach (var obj in item.Subjects)
                        {
                           <p>@obj.SubjectTitle</p>
                        }
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Student" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>