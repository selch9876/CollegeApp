
@{
    ViewData["Title"] = "Create";
}

@model Subject


<form method="post" action="">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Subject
            </h2>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="SubjectTitle">Subject Name</label>
                <input asp-for="SubjectTitle" type="text" class="form-control" />
                <span asp-validation-for="SubjectTitle" class="text-danger"></span>
            </div>
            
            
            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger" />
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Add Subject</button>
            <a asp-controller="Subject" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
        </div>
    </div>
</form>






@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}